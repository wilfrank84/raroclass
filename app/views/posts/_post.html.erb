<div id="<%= dom_id post %>">
  <p class="my-5">
    <%= image_tag post.cover_image if post.cover_image.present? %>
  </p>
  
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= post.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Body:</strong>
    <% if action_name == 'search' %>
      <%= post.content.truncate(10) %>
    <% else %>
      <%= post.content %>
    <% end %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Category:</strong>
    <%= post.category.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this post", post, data: { turbo_frame: "_top" }, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

    <% if current_user %>
      <%= link_to 'Edit this post', edit_post_path(post), data: { turbo_frame: "_top" }, class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <% end %>  

    <hr class="mt-6">
  <% end %>
</div>
